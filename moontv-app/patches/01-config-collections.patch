+/* eslint-disable no-console */
+
+import { NextRequest } from 'next/server';
+
+export function completeCollectionPath(path: string, request: NextRequest | null): string {
+    const pathPattern = /^\/config-collections\//;
+    // const fullUrlPattern = /^(http:\/\/|https:\/\/)[^\s/$.?#].[^\s]*$/i;
+    if (pathPattern.test(path)) {  // 用 server address 补全
+        let protocol = 'http';
+        let baseUrl = `http://${process.env.HOSTNAME || 'localhost'}:${process.env.PORT || 3000}`;
+        if (request) {
+            //console.log('=> request:', request);
+            if (request.url && request.url.startsWith('https://')) {
+                protocol = 'https';
+            }
+            const host = request.headers?.get('host');
+            if (host) {
+                baseUrl = `${protocol}://${host}`;
+            }
+        }
+        const fullUrl = new URL(path, baseUrl).toString();
+        console.log(`Get config-collection URL:`, fullUrl);
+        return fullUrl;
+    } else {  // do nothing
+        console.log(`Get URL:`, path);        
+        return path;
+    }
+}
